<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eRestoran.Client.Mobile.Views.Detalji"
             Title="{Binding Naziv}">
    <StackLayout Spacing="20" Padding="15">
        <Image Source="xamarin_logo.png" WidthRequest="100" HeightRequest="100"></Image>
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Cijena}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Kategorija}" FontSize="Small"/>

    </StackLayout>
</ContentPage>