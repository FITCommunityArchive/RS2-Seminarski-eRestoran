<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eRestoran.Client.Mobile.Views.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Login"></Label>
            <Label Text="Username" Margin="20 0 0 0" FontSize="Medium"></Label>
            <Entry x:Name="usernameEntry" Placeholder="Username ..." Text="{Binding Username}"></Entry>
            <Label Text="Password" Margin="20 0 0 0" FontSize="Medium"></Label>
            <Entry x:Name="passwordEntry" Placeholder="Password ..." Text="{Binding Password}"></Entry>
            <Button Text="Login" Command="{Binding SubmitCommand}"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>